<div class = "container">
  <div class = "row">
    <div class = "col-md-12">
      <h1>Your Tasks:</h1>
      <table id = "task-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Hours</th>
            <th>User ID </th>
            <th>Due date</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= task.title %></td>
              <td><%= task.description %></td>
              <td><%= task.hours %></td>
              <td><%= task.user_id %></td>
              <td><%= task.due_date %></td>
              <td><%= link_to 'Show', task %></td>
              <td><%= link_to 'Edit', edit_task_path(task) %></td>
              <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Task', new_task_path %>
    </div>
  </div>
</div>
