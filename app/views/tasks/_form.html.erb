<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, as: :text %>
    <%= f.input :hours %>
    <%= f.input :due_date %>
    <%= f.input :user_id do %>
      <%= f.select :user_id, User.all.map { |u| [u.username, u.id] }, include_blank: true %>
      <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
