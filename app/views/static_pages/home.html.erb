<div class = "row">
	<div class = "col-md-6">
		<h1> Your open tasks:</h1>
		 <% @open_tasks.each do |open_task| %>
		 <%= open_task.title %>
		 <%end%>
	</div>
	<div class = "col-md-6">
		<h1> All Assigned Tasks: </h1>
		<% @tasks.each do |task| %>
		<div class = "col-md-4"> <p> <%= task.title %> 	<%= task.open %> </p> </div>

		<div class = "col-md-2"> <%= link_to("Open Task", task_path(task, :task => {:open => 1}), 
									:method => :put) %> 
		</div>
		<%end%>
	</div>
</div>